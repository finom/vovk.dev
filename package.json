{
  "name": "vovk.dev",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run lint && tsc --noEmit",
    "dev": "rm -rf .next && vovk dev --next-dev",
    "dev-exit": "vovk dev --next-dev --exit",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "rm -rf dist && deploy-to-git && git push",
    "upgrade": "npx npm-check-updates -x eslint -u && npm install --legacy-peer-deps",
    "output-cli": "FORCE_COLOR=1 npx vovk-init@draft --channel=draft | npx ansi-to-html > output.html",
    "generate": "vovk generate",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind"
  },
  "config": {
    "deployToGit": {
      "repository": "git@github.com:finom/vovk.dev.git",
      "branch": "gh-pages",
      "folder": "dist",
      "script": "npm run build && cp -a out/. dist/",
      "commit": "Automatic commit text",
      "user": {
        "email": "andrii@gubanov.eu",
        "name": "Andrey Gubanov"
      }
    }
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@scalar/api-reference-react": "^0.7.38",
    "@types/json-schema": "^7.0.15",
    "bright": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next": "^15.4.6",
    "next-themes": "^0.4.6",
    "nextra": "^4.3.0",
    "nextra-theme-docs": "^4.3.0",
    "openai": "^5.12.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-syntax-highlighter": "^15.6.1",
    "react-transition-group": "^4.4.5",
    "tailwind-merge": "^3.3.1",
    "vovk": "^3.0.0-draft.358",
    "vovk-ajv": "^0.0.0-draft.39",
    "vovk-client": "^0.0.4-draft.68",
    "vovk-examples": "^2.0.16",
    "vovk-react-query": "^0.0.1-draft.95",
    "vovk-zod": "^1.0.0-draft.113",
    "zod": "^4.0.17"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-transition-group": "^4.4.12",
    "deploy-to-git": "^0.4.1",
    "eslint": "^8",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "pagefind": "^1.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "shiki": "^3.9.2",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "user-agent-data-types": "^0.4.2",
    "vovk-cli": "^0.0.1-draft.329"
  }
}
