{
  "name": "vovk.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "npm run lint && tsc --noEmit",
    "dev": "vovk dev",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "rm -rf dist && deploy-to-git"
  },
  "config": {
    "deployToGit": {
      "repository": "git@github.com:finom/vovk.dev.git",
      "branch": "gh-pages",
      "folder": "dist",
      "script": "npm run build && cp -a out/. dist/",
      "commit": "Automatic commit text",
      "user": {
        "email": "andrii@gubanov.eu",
        "name": "Andrii Gubanov"
      }
    }
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "use-0": "^1.0.2",
    "vovk": "^1.0.4",
    "vovk-client": "^0.0.2",
    "vovk-examples": "^0.1.64"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.17",
    "deploy-to-git": "^0.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
