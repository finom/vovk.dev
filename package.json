{
  "name": "vovk.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "npm run lint && tsc --noEmit",
    "dev": "vovk dev --next-dev",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "rm -rf dist && deploy-to-git && git push",
    "upgrade": "npx npm-check-updates -x eslint -u && npm install",
    "download-examples": "npx tsx ./scripts/downloadExamples.mts"
  },
  "config": {
    "deployToGit": {
      "repository": "git@github.com:finom/vovk.dev.git",
      "branch": "gh-pages",
      "folder": "dist",
      "script": "npm run build",
      "commit": "Automatic commit text",
      "user": {
        "email": "andrii@gubanov.eu",
        "name": "Andrii Gubanov"
      }
    }
  },
  "dependencies": {
    "next": "^14.2.3",
    "nextra": "^2.13.4",
    "nextra-theme-blog": "^2.13.4",
    "nextra-theme-docs": "^2.13.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-syntax-highlighter": "^15.5.0",
    "use-0": "^1.2.5",
    "vovk": "^2.1.0",
    "vovk-client": "^0.0.3",
    "vovk-examples": "^1.0.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.19",
    "deploy-to-git": "^0.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.10.5",
    "typescript": "^5",
    "user-agent-data-types": "^0.4.2"
  }
}
