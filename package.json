{
  "name": "vovk.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "npm run lint && tsc --noEmit",
    "dev": "vovk dev --next-dev",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "rm -rf dist && deploy-to-git && git push",
    "upgrade": "npx npm-check-updates -x eslint -u && npm install --legacy-peer-deps",
    "download-examples": "npx tsx ./scripts/downloadExamples.mts",
    "output-cli": "FORCE_COLOR=1 npx vovk-init@draft --channel=draft | npx ansi-to-html > output.html",
    "generate": "vovk generate"
  },
  "config": {
    "deployToGit": {
      "repository": "git@github.com:finom/vovk.dev.git",
      "branch": "gh-pages",
      "folder": "dist",
      "script": "npm run build && cp -a out/. dist/",
      "commit": "Automatic commit text",
      "user": {
        "email": "andrii@gubanov.eu",
        "name": "Andrii Gubanov"
      }
    }
  },
  "dependencies": {
    "next": "^15.1.3",
    "nextra": "^3.3.1",
    "nextra-theme-blog": "^3.3.1",
    "nextra-theme-docs": "^3.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-transition-group": "^4.4.5",
    "tailwind-merge": "^2.6.0",
    "use-0": "^1.2.5",
    "vovk": "^3.0.0-draft.25",
    "vovk-client": "^0.0.4-draft.8",
    "vovk-dto": "^0.0.1-draft.10",
    "vovk-examples": "^1.0.1",
    "vovk-yup": "^0.0.1-draft.10",
    "vovk-zod": "^1.0.0-draft.11",
    "zod": "^3.24.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-transition-group": "^4.4.12",
    "autoprefixer": "^10.4.20",
    "deploy-to-git": "^0.4.1",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "user-agent-data-types": "^0.4.2",
    "vovk-cli": "^0.0.1-draft.40"
  }
}
